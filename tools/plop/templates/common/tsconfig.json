{
  "compilerOptions": {
    "module": "CommonJs",
    "target": "ES6",
    "outDir": "./dist/",
    "rootDir": "./src",
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}